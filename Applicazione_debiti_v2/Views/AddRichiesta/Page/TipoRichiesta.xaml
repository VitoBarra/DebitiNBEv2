<Page x:Class=" Applicazione_debiti_v2.Form.Add_Richiesta.page.TipoRichiesta"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppDebitiV2"
      mc:Ignorable="d" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:UC="clr-namespace:AppDebitiV2.Views.UC"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TipoRichiesta">

    <StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="50" Margin="0,10,0,0">
            <UC:UserBox/>
            <Button Style="{StaticResource MaterialDesignFlatButton}" Width="80" Height="50" Foreground="Black" >
                <md:PackIcon Kind="ArrowForwardCircle" Width="50" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <UC:UserBox/>
        </StackPanel>


        <StackPanel Height="80">
            <TextBox x:Name="InputAmmount" md:HintAssist.Hint="Ammount" md:HintAssist.Foreground="AliceBlue" Height="50" Margin="0,25,0,0" />
            <Label x:Name="Notif"  FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" Content="cia fra" />
        </StackPanel>
        
    </StackPanel>
</Page>
