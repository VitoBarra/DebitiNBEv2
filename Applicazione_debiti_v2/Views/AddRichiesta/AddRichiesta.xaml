<Window
    x:Class="AppDebitiV2.Views.AddRichiesta"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UC="clr-namespace:AppDebitiV2.Views.UC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppDebitiV2.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="AddRichiesta"
    Width="560"
    Height="350"
    Style="{StaticResource WindowBase}"
    mc:Ignorable="d">
    <Grid>

        <Border
            Width="520"
            Height="250"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            Style="{StaticResource MyBorder}">


            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="30"
                    ShadowDepth="3"
                    Color="#ccdaf0" />
            </Border.Effect>
            <Grid Margin="10">


                <Button
                    Margin="0,0,5,5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Content="new page" />
                <Frame x:Name="PageControler" NavigationUIVisibility="Hidden" />
            </Grid>

        </Border>


    </Grid>
</Window>
