<UserControl
    x:Class="AppDebitiV2.Views.UC.Movment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppDebitiV2.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="Movement"
    d:DesignHeight="50"
    d:DesignWidth="400"
    Background="White"
    mc:Ignorable="d">
    <Grid>

        <Label
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="{Binding Path=Credit, ElementName=Movement}"
            FontSize="30" />
        <Label
            Margin="75,0,300,0"
            VerticalAlignment="Center"
            Content="€"
            FontSize="30" />
        <Separator Margin="-100,0,100,0">
            <Separator.LayoutTransform>
                <RotateTransform Angle="90" />
            </Separator.LayoutTransform>
        </Separator>
        <Label
            Margin="142,1,89,-1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="{Binding Path=Username, ElementName=Movement}"
            FontFamily="trebuchet ms"
            FontSize="30"
            Foreground="Black" />

    </Grid>
</UserControl>
