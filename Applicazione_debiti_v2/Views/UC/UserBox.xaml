<UserControl x:Class="AppDebitiV2.Views.UC.UserBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppDebitiV2.Views.UC"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="160" Background="White">
    
    
    
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>




        <Button Style="{StaticResource MyMaterialButton}" Margin="5,5,5,5" Height="60"/>

        <Label Content="vito" Foreground="Black" Grid.Column="1" Visibility="Visible" VerticalAlignment="Top"     HorizontalAlignment="Center" FontSize="15" x:Name="User_view" Margin="0,0,3,0"/>
        <Label Content="ID"   Foreground="Black" Grid.Column="1" Visibility="Visible" VerticalAlignment="Bottom"  HorizontalAlignment="Left"  FontSize="15"/>
        <Label Content="1"    Foreground="Black" Grid.Column="1" Visibility="Visible" VerticalAlignment="Bottom"  HorizontalAlignment="Right" FontSize="15" x:Name="ID_view"   Margin="0,0,3,0"/>
         
   

    </Grid>
</UserControl>
